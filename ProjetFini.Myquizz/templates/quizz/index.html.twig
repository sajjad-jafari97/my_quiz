{% extends 'base.html.twig' %}

{% block title %}Hello QuizzController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    .question{
        font-size:20px;
        font-weight:bold;

    }
    .reponse{
        font-size:15px;
    }
    .button{
        background:blue;
        color:white;
        border:none;
        width:120px;
        height:40px;
        font-size:15px;
        border-radius:20px;
        margin-top:20px;
        float:right;
        cursor: pointer;
        transition:0.5s;
    }
    .button:hover{
        width:140px;
        height:50px;
        font-size:20px;
    }
    .condition{
        color:white;
    } 
    body{
        background-image: linear-gradient(to bottom, #718ba6, #589bb6, #35acb9, #2bbaad, #54c694);
    }
</style>

<div class="example-wrapper">
    <h1>{{ nameCategorie }}</h1>
    <p class="condition">Une seule r√©ponse possible pour chaque question</p>
 
    <form action="{{path('app_reponse')}}"  method="get" >
    <input type="hidden" name="idCategorie" value="{{idCategorie}}">
    <input type="hidden" name="nameCategorie" value="{{nameCategorie}}">
    {% for questions in questionQuizz %}
    <p class="question">{{questions.question}}</p>
    {% for reponses in reponsesQuizz %}

    {% if reponses.id_question == questions.id %}   
    <input type="radio" name="{{reponses.id_question}}" value="{{reponses.reponse}}" required>
    <label class="reponse">{{reponses.reponse}}</label></br>
    

    {% endif %}
    {% endfor %}
    {% endfor %}
        <input type="submit" value="Enregistrer" class="button" name="btnF">
    </form>

</div>

{% endblock %}
